                {
                    "label": "Link Active Background Color",
                    "name": "top_bar_link_bg_active_color",
                    "type": "color",
                    "default": "#008cba"
                },
                {
                    "label": "Link Active Color",
                    "name": "top_bar_link_active_color",
                    "type": "color",
                    "default": "#fff"
                },
                {
                    "label": "$topbar-dropdown-bg",
                    "name": "topbar_dropdown_bg",
                    "type": "color",
                    "default": "red"
                },
                {
                    "label": "$topbar-link-color",
                    "name": "topbar_link_color",
                    "type": "color",
                    "default": "red"
                }
            ]
        }
    ]
