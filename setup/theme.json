{
    "title": "Responsive Foundation Framework",
    "version": "1.00",
    "doctype": "HTML5", /* HTML5, XHTML1_STRICT, XHTML1_TRANSITIONAL, XHTML1_FRAMESET, HTML4_STRICT, HTML4_TRANSITIONAL, HTML4_FRAMESET  */
    "thumbnail": "_thumbnail.png",
